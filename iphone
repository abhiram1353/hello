<body>
    <div id="container">
        <h1>iPhone Interface</h1>
        <div id="count">Count: 0</div>
        <button class="button" onclick="incrementCount()">Increment Count</button>
        <button class="button" onclick="showAlert()">Show Alert</button>
    </div>

    <script>
        let count = 0;
        
        function incrementCount() {
            count++;
            document.getElementById('count').innerText = 'Count: ' + count;
        }

        function showAlert() {
            alert('You pressed the button!');
        }
    </script>
